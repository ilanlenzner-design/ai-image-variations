<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>AI Image Variations for After Effects</title>
    <organization>com.ilanlenzner</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true" />

    <!-- Define documents displayed at various steps -->
    <welcome file="welcome.html" mime-type="text/html" />
    <license file="license.txt" mime-type="text/plain" />
    <conclusion file="conclusion.html" mime-type="text/html" />

    <!-- Background image -->
    <background file="background.png" mime-type="image/png" alignment="topleft" scaling="proportional"/>

    <!-- List all component packages -->
    <pkg-ref id="com.ilanlenzner.aiImageVariations"/>

    <options customize="never" require-scripts="false"/>

    <!-- Define the order of installation -->
    <choices-outline>
        <line choice="default">
            <line choice="com.ilanlenzner.aiImageVariations"/>
        </line>
    </choices-outline>

    <choice id="default"/>
    <choice id="com.ilanlenzner.aiImageVariations" visible="false">
        <pkg-ref id="com.ilanlenzner.aiImageVariations"/>
    </choice>

    <pkg-ref id="com.ilanlenzner.aiImageVariations" version="1.0.0" onConclusion="none">AIImageVariations.pkg</pkg-ref>
</installer-gui-script>
